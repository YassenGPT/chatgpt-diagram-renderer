{
  "name": "chatgpt-diagram-renderer",
  "version": "1.0.0",
  "description": "Renders Diagrams like PlantUML directly in the ChatGPT Webinterface.",
  "main": "src/scripts/content.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:firefox": "npm run build && cd dist && zip -r ../chatgpt-diagram-renderer-firefox.zip .",
    "lint": "eslint 'src/**/*.{js,jsx}'",
    "format": "prettier --write 'src/**/*.{js,jsx,json}'",
    "dev": "webpack serve --mode development",
    "firefox": "web-ext run --source-dir=dist --watch-files=dist"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "stream-browserify": "^3.0.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "lodash": "^4.17.21",
    "pako": "^2.0.4"
  }
}
